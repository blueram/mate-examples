<!--- The default skin class for the Spark Button component.  

@see spark.components.Button

@langversion 3.0
@playerversion Flash 10
@playerversion AIR 1.5
@productversion Flex 4
-->
<s:SparkSkin 
	xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" 
	xmlns:fb="http://ns.adobe.com/flashbuilder/2009" 
	minWidth="75" minHeight="30" 
	alpha.disabled="0.5"
	currentStateChange="sparkskin1_currentStateChangeHandler(event)"
	>
	
	<!-- host component -->
	<fx:Metadata>
		
		
		<![CDATA[ 
		/** 
		* @copy spark.skins.spark.ApplicationSkin#hostComponent
		*/
		[HostComponent("spark.components.Button")]
		]]>
	</fx:Metadata>
	
	<fx:Script>
		<![CDATA[
			import mx.events.StateChangeEvent;
			
			protected function sparkskin1_currentStateChangeHandler(event:StateChangeEvent):void
			{			
				bgBorder.color = this.getStyle('borderColor') as uint || 0;
				
				labelDisplay.setStyle('color', this.getStyle('color') || 0 );
			}
		]]>
	</fx:Script>
	
	
	<!-- states -->
	<s:states>
		<s:State name="up" />
		<s:State name="over" stateGroups="overDownState" />
		<s:State name="down" stateGroups="overDownState" />
		<s:State name="disabled" />
	</s:states>

	
	
	<!-- layer 1: bg -->
	<s:Rect 
		left="0" right="0" 
		top="0" bottom="0"
		>
		<s:fill>
			<s:LinearGradient 
				rotation = "-90"
				>
				<s:GradientEntry 
					color="#f3f3f3"
					ratio="0" 
					/>
				<s:GradientEntry 
					color="#e1e1e1" 
					ratio="0.46" 
					ratio.overDownState="0.75" 
					/>
				<s:GradientEntry 
					color="#fcfcfc" 
					ratio="0.92" 
					/>
				<s:GradientEntry 
					color="#ffffff" 
					ratio="0.97" 
					/>
			</s:LinearGradient>
		</s:fill>
		<s:stroke>
			<s:SolidColorStroke
				id="bgBorder"
				caps="square"
				joints="miter"
				/>
		</s:stroke>

	</s:Rect>
	
	
	<!-- layer 8: text -->
	<!--- @copy spark.components.supportClasses.ButtonBase#labelDisplay -->
	<s:Label 
		id="labelDisplay"
		textAlign="center"
		mouseEnabled="false"
		verticalAlign="middle"
		maxDisplayedLines="1"
		fontSize="13"
		fontWeight="bold"
		horizontalCenter="0" verticalCenter="1"
		left="10" right="10" top="5" bottom="5"

		>
	</s:Label>
	
</s:SparkSkin>
