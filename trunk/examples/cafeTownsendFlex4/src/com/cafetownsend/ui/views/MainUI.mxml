<?xml version="1.0" encoding="utf-8"?>
<s:BorderContainer 
	xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:s="library://ns.adobe.com/flex/spark"
	xmlns:mx="library://ns.adobe.com/flex/mx"
	xmlns:views="com.cafetownsend.ui.views.*"
	xmlns:mate="http://mate.asfusion.com/"
	height="500" width="700"
	currentState="{ model.currentState }"
	>
	
	<s:layout>
		<s:VerticalLayout 
			gap="30"
			/>
	</s:layout>
	
	
	<fx:Script>
		<![CDATA[
			
			import com.cafetownsend.ui.presenters.MainUIPresentationModel;
			
			[Bindable]
			public var model:MainUIPresentationModel;
			
		]]>
	</fx:Script>
	
	<!-- States ______________________________________________________________________ -->
	
	<s:states>
		<s:State name="login" /> 			<!-- Navigation.LOGIN  -->
		<s:State name="employeeList" /> 	<!-- Navigation.EMPLOYEE_LIST  -->
		<s:State name="employeeDetail" /> 	<!-- Navigation.EMPLOYEE_DETAIL  -->
	</s:states>
	
	
	<!-- GUI ______________________________________________________________________ -->
	
	<s:BitmapImage 
		source="@Embed('assets/images/header.jpg')"
		width="700" 
		/>
	
	<s:Group 
		id="viewStack"
		width="100%" height="100%"
		>
		
		<views:Login 
			includeIn="login"
			horizontalCenter="0"
			/>
		
		<views:EmployeeList 
			includeIn="employeeList"
			horizontalCenter="0"
			/>
		
		
		<views:EmployeeDetail 
			includeIn="employeeDetail"
			horizontalCenter="0"
			/>
		
		
	</s:Group>
	
	
</s:BorderContainer>
